{
  "manifest_version": 3,
  "name": "Yuki Audio Recorder",
  "version": "1.0",
  "description": "Yuki audio records your audio and transcribes it.",
  "minimum_chrome_version": "116",
  "icons": {
    "16": "icons/not-recording.png",
    "32": "icons/not-recording.png",
    "48": "icons/not-recording.png",
    "128": "icons/not-recording.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/not-recording.png",
      "32": "icons/not-recording.png",
      "48": "icons/not-recording.png",
      "128": "icons/not-recording.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["tabCapture", "offscreen", "downloads"]
}
